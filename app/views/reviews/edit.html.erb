<h1>Edit Review for <%= @product.name %></h1>

<% if @review.errors.any? %>
  <h3>Oops there were some errors. Please try again:</h3>
  <ul>
    <% @review.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_for [@product, @review] do |f| %>
  <%= f.label :author %>
  <%= f.text_field :author %>
  <%= f.label :content_body %>
  <%= f.text_field :content_body %>
  <%= f.label :rating %>
  <%= f.text_field :rating %>
  <%= f.submit  %>
<% end %>


<p><%= link_to "Return to products", products_path %></p>
